    Example context (json):
    {
        "nav": 1,
        "courses": [
         {
            "title": "This is the alert title",
            "description": "This is the news description",
            "active": 1
         },
         {
            "title": "This is the alert title",
            "description": "This is the news description",
            "active": 0
         }
        ],
        "mods": [
         {
            "title": "This is the alert title",
            "description": "This is the news description",
            "active": 1
         },
         {
            "title": "This is the alert title",
            "description": "This is the news description",
            "active": 0
         }
        ]

    }
}}
<div id="block-pickup-content" class="py-3 bg-light animate-enter">
  <div class="container">
    <div class="row">

      <div class="col-lg-3">
        <div class="p-3">
          <h3>Pick up where you left off</h3>

          <div class="nav flex-column" id="v-pills-tab" role="tablist" aria-orientation="vertical">

            <a class="nav-link transition p-0 py-1 active"
                id="v-pills-home-tab"
                data-toggle="pill"
                href="#v-pills-home"
                role="tab"
                aria-controls="v-pills-home"
                aria-selected="true">
                  Courses
                </a>
            <a class="nav-link transition p-0 py-1"
                id="v-pills-profile-tab"
                data-toggle="pill"
                href="#v-pills-profile"
                role="tab"
                aria-controls="v-pills-profile"
                aria-selected="false">
                  Activities
                </a>
          </div>

        </div>
      </div>

      <div class="col-lg-9">

        <div class="tab-content" id="v-pills-tabContent">

          {{! Courses tab. }}
          <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">

            <div class="row">
            {{#courses}}
              <div class="col-lg-4 my-3">
                {{> block_pickup/coursecard }}
              </div>
            {{/courses}}
            </div>

            <!-- All courses link. -->
            <div class="col-12 text-right py-2">
              <a href="{{{ config.wwwroot }}}/my/courses.php"><i class="fa fa-arrow-right mr-2" aria-hidden="true"></i> View all your courses</a>
            </div>

          </div>

          {{! Activities tab. }}
          <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">

            <div class="row">
              {{#mods}}
              <div class="col-lg-6 mb-3">

                  <div class="media bg-white p-3">

                    <div class="activityiconcontainer {{purpose}} mr-2">
                        <img class="icon activityicon" src="{{icon}}" alt="">
                    </div>

                    <div class="media-body">
                        <div class="small text-capitalize">{{type}}</div>
                        <div class="activityname">
                          <a href="{{url}}" class="font-weight-bold">{{name}}</a>
                        </div>
                        <div class="small">{{coursename}}</div>
                    </div>
                  </div>
              </div>
              {{/mods}}
            </div>

          </div>
    </div>
  </div>
</div>


<style>
